Piedra Papel O Tijera
#include<stdio.h>
int main(){
    int j=0;
    int n=0;
    printf("Jugador 1:\n Piedra = 1, Papel = 2, Tijera = 3, Escoja 1 número. ");
    scanf("%d", &j);
    printf("Jugador 2:\n Piedra = 1, Papel = 2, Tijera = 3, Escoja 1 número. ");
    scanf("%d", &n);
    if (j==1 && n==3){
        printf("Jugador 1 Gana\n");
    }
    if (j==2 && n==1){
        printf("jugador 1 Gana\n");
    }
    if (j==3 && n==2){
        printf("Jugador 1 gana\n");
    }
    if (n==1 && j==3){
        printf("Jugador 2 gana\n");
    }
    if (n==2 && j==1){
        printf("Jugador 2 gana\n");
    }
    if (n==3 && j==2){
        printf("Jugador 2 gana\n");
    }
}

